@model RoleBasedAuthorization.Models.Admins

@{
    ViewData["Title"] = "Create Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add New Admin</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form>
                    <div class="box-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Full Name</label>
                            <input type="text" class="form-control" id="FullName" name="FullName" placeholder="Enter Full Name">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Email</label>
                            <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter Email">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Username</label>
                            <input type="text" class="form-control" id="Username" name="Username" placeholder="Enter Username" onchange="CheckAvailability()" onkeyup="CheckAvailability()">
                        </div>
                        <div class="form-group">
                            <span id="Status"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter Password" onchange="CheckAvailability()">
                        </div>
                        <div class="form-group">
                            <label asp-for="RolesId" class="control-label"></label>
                            @Html.DropDownList("RolesId", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>
<script>

    function CheckAvailability() {
        $("#Status").html("Checking...");
        var username = $("#Username").val();
        console.log(username);
        $.ajax({
            type: "GET",
            url: "/Admins/CheckUsernameAvailability",
            data: { username: username },
            //data: '{username: "' + username + '" }',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                console.log(data.result);
                debugger
                if (data.result == false) {
                    $("#Status").html('<font color="Green">Available !. you can take it.</font >');
                    $("#Username").css("border-color", "Green");

                }
                //if (data == true) {
                //    $("#Status").html('<font color="Red">That name is taken.Try Another.</font>');
                //    $("#Username").css("border-color", "Red");
                //}
                else {
                    $("#Status").html('<font color="Red">That name is taken.Try Another.</font >');
                    $("#Username").css("border-color", "Red");
                }
            }
        });
    };
    $(document).ready(function () {
        $("form").submit(function (event) {
            var formData = {
                FullName: $("#FullName").val(),
                Email: $("#Email").val(),
                Username: $("#Username").val(),
                Password: $("#Password").val(),
                RolesId: $("#RolesId").val(),
            };

            $.ajax({
                type: "POST",
                url: "/Admins/Create",
                data: formData,
                dataType: "json",
                encode: true,
            }).done(function (data) {
                console.log(data);
            });

            event.preventDefault();
        });
    });
</script>
